<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<h1>User Signup Application</h1>

<% if flash[:error] %>
    <div id="flash_error">
    <p style="color:red;"><%= flash[:error] %></p>
    </div>
<% end %>
<% if flash[:notice] %>
    <div id="flash_notice">
    <p style="color:green;"><%= flash[:notice] %></p>
    </div>
<% end %>


<%= yield %>

<br><br>
<ul style='display:inline; margin:0; padding:0;'>
  <li style='display:inline;'><%= link_to 'Home', root_path %></li>
  <li style='display:inline;'><%= link_to 'Sign up', signup_path %></li>
  <li style='display:inline;'><%= link_to 'Sign in', signin_path %></li>
</ul>


</body>
</html>
